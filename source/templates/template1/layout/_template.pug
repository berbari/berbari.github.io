include ../../../bemto_lib/bemto
include helpers/mixins
include components/header
include components/footer
include components/popover

doctype html
html(lang= "en")
  block vars
  head
    meta(charset="utf-8")
    meta(http-equiv="content-language" content="en")
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='author',content="")
    title #{title ? title : ''}
    meta(name='title', content='' + meta.title)
    meta(name='description', content='' + meta.description)
    meta(name='keywords', content='' + meta.keywords)
    meta(name='viewport', content='width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0')
    meta(http-equiv='x-dns-prefetch-control', content='on')
    link(rel='dns-prefetch', href='//ajax.googleapis.com')
    link(rel='dns-prefetch', href='//maps.googleapis.com/')
    link(rel='dns-prefetch', href='//maps.gstatic.com/')
    block head-css
      link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
      link(href="assets/css/foundation.css" rel="stylesheet")
      link(href="assets/css/app.css" rel="stylesheet")
      link(href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700', rel='stylesheet')

  body(class=(bodyClass ? bodyClass : ''))
    p #{test}
    block content

    block popover

    block footer-scripts
      script(src='./assets/js/foundation.js' defer)
      script(src='./assets/js/app.js' defer)
      script(src='./assets/js/bootstrap.min.js' defer)
